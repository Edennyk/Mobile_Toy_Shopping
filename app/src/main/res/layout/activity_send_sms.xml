<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".SendSMS"
    android:background="@mipmap/backgroundwhite">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sans_sc"
        android:text="Enter your phone Number"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/alegreya_sans_sc"
        android:text="for your order information"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="83dp"
        android:hint="Phone Number"
        android:textAlignment="center"
        android:textAllCaps="true"></EditText>

    <Button
        android:id="@+id/btnSendIntentSMS"
        style="@style/button_styling"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="207dp"
        android:background="@drawable/button_background"
        android:onClick="onSMSIntentClick"
        android:text="@string/send_sms"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnSendEmail"
        style="@style/button_styling"
        android:layout_width="305dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="414dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/button_background"
        android:text="@string/send_email"
        android:textColor="@color/white" />

</RelativeLayout>