<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".CartActivity"
    android:background="@mipmap/backgroundwhite">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="665dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            style="@style/heading_styling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sans_sc"
            android:text="@string/sh_cartitem"
            android:textAlignment="center"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btnCheckout"
            style="@style/button_styling"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="@string/btn_checkout"
            android:layout_gravity="center"
            android:textColor="@color/white" />

        <ListView
            android:id="@+id/lvCart"
            android:layout_width="match_parent"
            android:layout_height="471dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/cartNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@mipmap/bottombar"
        app:menu="@menu/navigation" />
</RelativeLayout>