<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreInfoActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@mipmap/backgroundwhite">

    <TextView
        style="@style/activity_styling"
        android:layout_width="404dp"
        android:layout_height="172dp"
        android:fontFamily="@font/alegreya_sans_sc"
        android:text="@string/networking"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvClick"
        android:layout_marginTop="90dp"
        android:layout_width="404dp"
        android:layout_height="36dp"
        android:fontFamily="@font/abeezee"
        android:onClick="onClick"
        android:text="@string/bk_click"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/moreinfoNavView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:itemBackground="@mipmap/bottombar"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="510dp"
        android:text="Nayul Kim \n  \t\t\t\t&amp;\n Eunbi Seo" />

</RelativeLayout>